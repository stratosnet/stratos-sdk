{
  "name": "@stratos-network/stratos-sdk.js",
  "version": "1.3.0",
  "description": "The JavaScript SDK for Stratos Network",
  "license": "ISC",
  "author": "Stratos Network",
  "keywords": [
    "crypto",
    "blockchain",
    "smart-contracts",
    "stratos",
    "cosmosjs"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/stratosnet/stratos-sdk.git"
  },
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "build": "tsc --module commonjs && webpack --mode production",
    "test": "jest --watch --detectOpenHandles --forceExit",
    "prettier": "prettier --write ./src/**/*.ts",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "prepublishOnly": "npm run build",
    "start:build": "tsc -w --module commonjs ",
    "start:run": "nodemon dist/run.js",
    "start": "concurrently npm:start:*",
    "jest-coverage": "yarn run jest -- --coverage",
    "doc": "typedoc --out docs src",
    "update-proto": "yarn upgrade @stratos-network/stratos-cosmosjs-types",
    "start:once": " yarn cli:build; yarn start:run:once",
    "start:run:once": " node --trace-warnings dist/run.js ",
    "cli:build": "tsc",
    "test:sdk:integration": "jest ./testing/integration/sdk_integration.spec.ts ",
    "test:sdk:integration:local": " INTEGRATION_ENV_NAME=local yarn test:sdk:integration",
    "test:sdk:integration:mesos": " INTEGRATION_ENV_NAME=mesos yarn test:sdk:integration",
    "test:sdk:integration:devnet": " INTEGRATION_ENV_NAME=devnet yarn test:sdk:integration",
    "integration": "yarn test:sdk:integration:local",
    "integration:mesos": "yarn test:sdk:integration:mesos"
  },
  "lint-staged": {
    "./src/**/*.ts": [
      "prettier --write",
      "eslint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-checkout": "yarn"
    }
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/user-event": "^13.1.5",
    "@trivago/prettier-plugin-sort-imports": "^3.4.0",
    "@types/blueimp-md5": "^2.18.0",
    "@types/crypto-js": "^4.1.1",
    "@types/jest": "^26.0.14",
    "@types/json-bigint": "^1.0.0",
    "@types/keccak": "^3.0.1",
    "@types/lodash": "^4.14.170",
    "@types/node": "^14.14.17",
    "@types/qs": "^6.9.7",
    "@types/readable-stream": "^2.3.9",
    "@types/sjcl": "^1.0.29",
    "@types/tmp": "^0.2.0",
    "@types/ws": "^7.4.0",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^5.37.0",
    "buffer": "^6.0.3",
    "concurrently": "^7.5.0",
    "eslint": "^7.5",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.3.6",
    "jest": "^27.0.0",
    "lint-staged": "^10.5.3",
    "msw": "^0.48.2",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "stream-browserify": "^3.0.0",
    "ts-jest": "^27.0.1",
    "ts-loader": "^8.0.13",
    "ts-node": "^9.1.1",
    "ts-proto": "^1.139.0",
    "tsconfig-paths-webpack-plugin": "^3.3.0",
    "typedoc": "^0.21.9",
    "typescript": "^4.8.4",
    "typescript-json-schema": "^0.50.1",
    "webpack": "^5.11.1",
    "webpack-bundle-analyzer": "^4.3.0",
    "webpack-cli": "^4.3.0"
  },
  "dependencies": {
    "@cosmjs/crypto": "0.31.1",
    "@cosmjs/encoding": "0.31.1",
    "@cosmjs/proto-signing": "0.31.1",
    "@cosmjs/stargate": "0.31.1",
    "@stratos-network/stratos-cosmosjs-types": "https://github.com/stratosnet/stratos-cosmosjs-types.git#main",
    "@types/bn.js": "5.1.0",
    "axios": "^0.21.1",
    "axios-retry": "^3.1.9",
    "bech32": "1.1.4",
    "bignumber.js": "9.0.1",
    "bip39": "3.0.2",
    "blueimp-md5": "^2.19.0",
    "bn.js": "^5.2.0",
    "cids": "^1.1.9",
    "cosmjs-types": "^0.5.0",
    "crypto-js": "3.1",
    "dotenv": "^10.0.0",
    "ethers": "5.7.2",
    "json-bigint": "^1.0.0",
    "keccak": "^3.0.2",
    "lodash": "^4.17.21",
    "md5-file": "^5.0.0",
    "multiformats": "9.9.0",
    "multihashes": "^4.0.3",
    "multihashing-async": "^2.1.4",
    "qs": "^6.11.1",
    "sha3": "^2.1.4",
    "sjcl": "1.0.8",
    "sleep-promise": "^9.1.0",
    "tweetnacl": "1.0.1",
    "tweetnacl-util": "0.15.0"
  }
}
