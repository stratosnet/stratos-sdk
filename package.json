{
  "name": "@stratos-network/stratos-sdk.js",
  "version": "0.4.1",
  "description": "The JavaScript SDK for Stratos Network",
  "license": "ISC",
  "author": "Stratos Network",
  "keywords": [
    "crypto",
    "blockchain",
    "smart-contracts",
    "stratos",
    "cosmosjs"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/stratosnet/stratos-sdk.git"
  },
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "build": "tsc --module commonjs && webpack --mode production",
    "test": "jest --watch --detectOpenHandles --forceExit",
    "prettier": "prettier --write ./src/**/*.ts",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "prepublishOnly": "npm run build",
    "start:build": "tsc -w --module commonjs ",
    "start:run": "nodemon dist/run.js",
    "start": "concurrently npm:start:*",
    "jest-coverage": "yarn run jest -- --coverage",
    "doc": "typedoc --out docs src",
    "update-proto": "yarn upgrade @stratos-network/stratos-cosmosjs-types"
  },
  "lint-staged": {
    "./src/**/*.ts": [
      "prettier --write",
      "eslint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-checkout": "yarn"
    }
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/user-event": "^13.1.5",
    "@types/jest": "^26.0.14",
    "@types/json-bigint": "^1.0.0",
    "@types/lodash": "^4.14.170",
    "@types/node": "^14.14.17",
    "@types/readable-stream": "^2.3.9",
    "@types/sjcl": "^1.0.29",
    "@types/tmp": "^0.2.0",
    "@types/ws": "^7.4.0",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "buffer": "^6.0.3",
    "concurrently": "^6.0.1",
    "eslint": "^7.5",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-simple-import-sort": "^5.0.1",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "msw": "^0.28.1",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "stream-browserify": "^3.0.0",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.13",
    "ts-node": "^9.1.1",
    "tsconfig-paths-webpack-plugin": "^3.3.0",
    "typedoc": "^0.21.9",
    "typescript": "^4.1.5",
    "webpack": "^5.11.1",
    "webpack-bundle-analyzer": "^4.3.0",
    "webpack-cli": "^4.3.0"
  },
  "dependencies": {
    "@cosmjs/crypto": "0.28.9",
    "@cosmjs/encoding": "0.28.9",
    "@cosmjs/proto-signing": "0.28.9",
    "@cosmjs/stargate": "0.28.9",
    "@stratos-network/stratos-cosmosjs-types": "^0.1.0",
    "@types/bn.js": "5.1.0",
    "axios": "^0.21.1",
    "axios-retry": "^3.1.9",
    "bech32": "1.1.4",
    "bignumber.js": "9.0.1",
    "bip39": "3.0.2",
    "bn.js": "^5.2.0",
    "cosmjs-types": "^0.5.0",
    "dotenv": "^10.0.0",
    "json-bigint": "^1.0.0",
    "lodash": "^4.17.21",
    "sjcl": "1.0.8",
    "sleep-promise": "^9.1.0",
    "tweetnacl": "1.0.1",
    "tweetnacl-util": "0.15.0"
  }
}
